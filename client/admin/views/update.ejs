<%- include('partials/header', { title: 'Update Object - SB Admin' }) %>
  <!-- Begin Page Content -->
  <div class="container-fluid">
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Edit Event Details</h6>
      </div>
      <div class="card-body">
        <form id="updateForm">
          <div class="form-group">
            <label for="id">ID <span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="id" name="id" readonly>
            <div id="idError" class="invalid-feedback"></div>
          </div>
          <div class="form-group">
            <label for="name">Name <span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="name" name="name" required>
            <div id="nameError" class="invalid-feedback"></div>
          </div>
          <div class="form-group">
            <label for="description">Description <span class="text-danger">*</span></label>
            <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
            <div id="descriptionError" class="invalid-feedback"></div>
          </div>
          <div class="form-group">
            <label for="selectedEvent">Events (comma-separated) <span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="selectedEvent" name="selectedEvent" required>
            <div id="selectedEventError" class="invalid-feedback"></div>
          </div>
          <button type="submit" class="btn btn-primary">Save</button>
          <a href="/admin/objects" class="btn btn-secondary ml-2">Cancel</a>
          <div id="feedbackMessage" class="mt-3"></div>
        </form>
      </div>
    </div>
  </div>
  <!-- /.container-fluid -->
<%- include('partials/footer') %>
<script src="/js/update.js"></script>
</div>
<!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->
</body>
</html>